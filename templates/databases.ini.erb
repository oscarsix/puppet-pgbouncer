
[databases]
<% if @databases -%>
<%  @databases.each_pair do |key, entry| -%>
<%= key  %> = host=<%= entry['host'] %><% if entry['port'] %> port=<%= entry['port'] %><% end %><% if entry['dbname'] %> dbname=<%= entry['dbname'] %><% end %><% if entry['user'] %> user=<%= entry['user'] %><% end %><% if entry['password'] %> password=<%= entry['password'] %><% end %><% if entry['auth_user'] %> auth_user=<%= entry['auth_user'] %><% end %><% if entry['pool_size'] %> pool_size=<%= entry['pool_size'] %><% end %><% if entry['connect_query'] %> connect_query=<%= entry['connect_query'] %><% end %><% if entry['pool_mode'] %> pool_mode=<%= entry['pool_mode'] %><% end %><% if entry['max_db_connections'] %> max_db_connections=<%= entry['max_db_connections'] %><% end %><% if entry['client_encoding'] %> client_encoding=<%= entry['client_encoding'] %><% end %><% if entry['datestyle'] %> datestyle=<%= entry['datestyle'] %><% end %><% if entry['timezone'] %> timezone=<%= entry['timezone'] %><% end %>
<%  end -%>
<% end %>
